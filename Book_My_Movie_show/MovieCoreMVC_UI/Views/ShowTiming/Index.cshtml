@model IEnumerable<Book_Show_Entity.ShowTiming>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-controller="ShowTiming" asp-action="ShowTimingEntry">ShowTiming Entry</a>
</div>

<div class="row">
    <div class="col-12">
        <center><h3>Show Timing Details</h3></center>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>Show Timing Id</th>
                    <th>Show Timing</th>
                    <th>Theatre Id</th>
                    <th>Movie Id</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {//default put as model it is keyword in MVC
                 //@ we used to refer the csharp code
                 //razer view compiler.it will convert the code to html understand file
                    <tr>
                        <td>@movie.ShowTimingId</td>
                        <td>@movie.ShowTime</td>
                        <td>@movie.TheatreId</td>
                        <td>@movie.Theater.Location.LocationDesc</td>
                        
                        <td><a asp-controller="ShowTiming" asp-action="EditShowTiming" asp-route-ShowTimingId="@movie.ShowTimingId">Edit</a></td>
                        <td><a asp-controller="ShowTiming" asp-action="DeleteShowTiming" asp-route-ShowTimingId="@movie.ShowTimingId">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>