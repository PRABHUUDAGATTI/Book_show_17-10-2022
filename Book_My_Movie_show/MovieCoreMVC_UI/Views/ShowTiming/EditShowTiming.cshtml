
@{
    ViewData["Title"] = "EditShowTiming";
}

@model Book_Show_Entity.ShowTiming


<div>
    <hr />
    <a asp-controller="ShowTiming" asp-action="Index">Show Timing</a>
    <hr />

</div>
<form method="post" enctype="multipart/form-data">
    <h2>Movie Entry</h2><hr />
    <div class="form-group">
        <label>Movie Id</label>
        <input type="text" asp-for="MovieId" class="form-control" placeholder="enter a movie id" required />
    </div>

    <div class="form-group">
        <label>Theater Id</label>
        <input type="text" asp-for="TheatreId" class="form-control" placeholder="enter a Theatre Id" required />
    </div>

    <div class="form-group">
        <label>Show Time</label>
        <input type="datetime-local" asp-for="ShowTime" class="form-control" placeholder="enter a Show Time" required />
    </div>
    <hr />
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="reset" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">@ViewBag.message</div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">@ViewBag.message</div>
    }
</form>




