@model Book_Show_Entity.Location
@{
    ViewData["Title"] = "EditLocation";
}

<h1>EditLocation</h1>

<form method="post" enctype="multipart/form-data">
    <h2>Location Entry</h2><hr />
    <div class="form-group">
        <label>Add Location</label>
        <input type="text" asp-for="LocationDesc" class="form-control" placeholder="enter a Location name" required />
    </div>


    <hr />
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="reset" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">@ViewBag.message</div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">@ViewBag.message</div>
    }
</form>