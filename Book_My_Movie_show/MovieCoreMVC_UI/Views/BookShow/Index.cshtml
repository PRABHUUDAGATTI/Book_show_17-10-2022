@model IEnumerable<Book_Show_Entity.BookShow>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-controller="BookShow" asp-action="BookShowEntry">BookShow Entry</a>
</div>

<div class="row">
    <div class="col-12">
        <center><h3>Book Show Details</h3></center>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>BookShowId</th>
                    <th>UserId</th>
                    <th>ShowTimingId</th>
                    <th>NoOfTickets</th>
                    <th>TicketCost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {//default put as model it is keyword in MVC
                 //@ we used to refer the csharp code
                 //razer view compiler.it will convert the code to html understand file
                    <tr>
                        <td>@movie.BookShowId</td>
                        <td>@movie.UserId</td>
                        <td>@movie.ShowTimingId</td>
                        <td>@movie.NoOfTickets</td>
                        <td>@movie.TicketCost</td>
                        <td><a asp-controller="BookShow" asp-action="EditBookShow" asp-route-BookShowId="@movie.BookShowId">Edit</a></td>
                        <td><a asp-controller="BookShow" asp-action="DeleteBookShow" asp-route-BookShowId="@movie.BookShowId">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>