@model IEnumerable<Book_Show_Entity.UserDetails>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-controller="UserDetails" asp-action="UserDetailsEntry">AddUserDetails Entry</a>
</div>
<hr/>

<div class="row">
    <div class="col-12">
        <center><h3>User Details</h3></center>
        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>User Name</th>
                    <th>User Email</th>
                    <th>User Password</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {//default put as model it is keyword in MVC
                 //@ we used to refer the csharp code
                 //razer view compiler.it will convert the code to html understand file
                    <tr>
                        <td>@movie.UserId</td>
                        <td>@movie.UserName</td>
                        <td>@movie.UserEmail</td>
                        <td>@movie.UserPhoneNo</td>
                        <td><a asp-controller="UserDetails" asp-action="EditUser" asp-route-UserId="@movie.UserId">Edit</a></td>
                        <td><a asp-controller="UserDetails" asp-action="DeleteUser" asp-route-UserId="@movie.UserId">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

