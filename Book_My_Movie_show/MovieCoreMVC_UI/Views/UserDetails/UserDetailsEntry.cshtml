@model Book_Show_Entity.UserDetails
@{
    ViewData["Title"] = "UserDetailsEntry";
}

<div>
    <a asp-controller="UserDetails" asp-action="Index">User Details</a>
</div>



<form method="post" enctype="multipart/form-data">
    <h2>UserDetails</h2><hr />
    <div class="form-group">
        <label> UserName</label>
        <input type="text" asp-for="UserName" class="form-control" placeholder="enter a UserName" required />
    </div>
    <div class="form-group">
        <label>UserEmail</label>
        <input type="text" asp-for="UserEmail" class="form-control" placeholder="enter a UserEmail" required />
    </div>
    <div class="form-group">
        <label>User password</label>
        <input type="text" asp-for="UserPhoneNo" class="form-control" placeholder="enter a User password" required />
    </div>


    <hr />
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="reset" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">@ViewBag.message</div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">@ViewBag.message</div>
    }
</form>

